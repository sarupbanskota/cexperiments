#include <stdio.h>

/* Prints a vertical histogram of the lengths
   of words in standard input 
*/
#define MAXLENGTH 10
char HISTOGRAM[MAXLENGTH][MAXLENGTH];

int main(){
  char c;
  int i=0,k;
  int j=MAXLENGTH;
  for(k=0;k<MAXLENGTH && (c=getchar())!=EOF;k++){
    if(c!='\n'){
      HISTOGRAM[i][j]='*';
      j--;
    }
    else{
      i++;
    }
  }
  while(i--){
    for(j=0;j<MAXLENGTH;j++){ printf("%c ", HISTOGRAM[i][j]); } printf("\n");
  }

  return 0;
}
